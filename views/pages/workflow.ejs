<%- include( '../' +'components/header'); -%>
<main class="flex items-center justify-center rounded-lg gap-4 flex-col md:flex-row">
  <!-- FORM Generator -->
  <div class="rounded-xl border shadow-sm h-full p-2">
    <%  if (locals.res) { %>

    <div class="min-h-52 flex flex-col gap-4 p-2 justify-around items-center rounded-lg border border-slate-200 shadow-sm h-full ">
      <h2 class="text-[1.5rem] max-w-72 font-bold leading-none tracking-tight capitalize text-center">
        ðŸŽ‰ðŸŽŠ Your policy search is now complete </h2>

      <div class="flex flex-col p-4 bg-black/5 rounded-lg self-end gap-2 w-full">
        <h3 class="text-xl font-semibold whitespace-nowrap leading-none tracking-tight">Categories</h3>
        <% if(locals.res.categories) { %>
        <!-- Success -->
        <div class="flex flex-row items-start gap-2">
          <% for (let category of locals.res.categories) { %>
          <div class="bg-white rounded-lg border border-slate-200 p-2 ">
            <p class="text-sm text-slate-500">
              <%= category %>
            </p>
          </div>
          <% } %>
        </div>
        <% }  else { %>
        <p class="text-xs font-medium text-rose-500">Error: Unable to fetch selected categories</p>
        <% } %>
      </div>

    </div>
    <% } else { %>
    <form action="/app" method="POST">
      <div class="flex flex-col space-y-1.5 p-6">
        <h3 class="text-2xl font-semibold whitespace-nowrap leading-none tracking-tight">Insurance Policy</h3>
        <p class="text-sm text-muted-foreground">Enter your information to get a quote</p>
      </div>
      <div class="p-6 space-y-4">
        <div class="grid grid-cols-2 gap-4">
          <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="name">
              Name
            </label>
            <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" id="name" name="name" placeholder="Enter your name" required="" />
          </div>
          <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="email">
              Email
            </label>
            <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" id="email" name="email" placeholder="Enter your email" required="" type="email" />
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="phone">
              Phone
            </label>
            <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" id="phone" name="phone" placeholder="Enter your phone" required="" type="tel" />
          </div>
          <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="dob">
              Date of Birth
            </label>
            <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" id="dob" name="dob" required="" type="date" />
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="budget">
              Budget
            </label>
            <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" id="budget" name="budget" placeholder="Enter your budget" required="" type="number" />
          </div>
          <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="insurance">
              Insurance
            </label>
            <%  if (locals.form) { %>
            <% if(locals.form.categories) { %>
            <div class="flex flex-col gap-2">
              <% for (let category of locals.form.categories) { %>
              <div class="flex flex-row items-center gap-2">
                <input type="checkbox" name="insurance" id="<%=  category %>" value="<%=  category %>" />
                <label class="text-xs" for="<%= category %>"> <%= category %></label>
              </div>
              <% } %>
            </div>
            <% } else { %>
            <p class="text-xs font-medium text-rose-500">Error: Unable to get insurance categories</p>
            <% }} else { %>
            <p class="text-xs font-medium text-rose-500">Error: Form not present</p>
            <% } %>
          </div>
        </div>
        <div class="space-y-2">
          <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="address">
            Address
          </label>
          <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" id="address" name="address" placeholder="Enter your address" required="" type="address" />
        </div>
        <div class="space-y-2">
          <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="occupation">
            Occupation
          </label>
          <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" id="occupation" name="occupation" placeholder="Enter your occupation" required="" />
        </div>
      </div>
      <div class="flex items-center p-6">
        <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-black text-white hover:bg-black/85 h-10 px-4 py-2 w-full" type="submit">
          Get a Quote
        </button>
      </div>
    </form>
    <% } %>
  </div>

  <div class="rounded-xl border shadow-sm p-2 flex flex-col gap-2 h-full w-full md:w-[inherit]" id="preview">
    <div class="flex flex-col p-6 bg-black/5 rounded-lg">
      <h3 class="text-xl font-semibold whitespace-nowrap leading-none tracking-tight">Policy Preview</h3>
      <p class="text-sm text-slate-500">Showcase on the available insurance policies</p>
    </div>
    <% if(locals.res) { %>
    <!-- Policy Result preview -->
    <div class="flex flex-row p-2 h-full items-center">
      <% if(locals.res.policies) { %>
      <% for (let policy of locals.res.policies) { %>
      <div class="bg-white shadow-sm max-w-52 max-h-[15rem] rounded-xl gap-4 border border-slate-200 p-4 flex flex-col justify-between">
        <div class="flex flex-row md:flex-col justify-between gap-4">
          <div class="w-10 h-10 bg-black rounded-lg border-2 border-slate-200 shrink-0"></div>
          <h3 class="text-lg font-semibold leading-none tracking-tight">
            <%= policy.title %>
          </h3>
        </div>
        <p class="text-sm text-slate-500 whitespace-wrap">
          <%= policy.description %>
        </p>

        <div class="flex flex-row w-full items-center justify-between">
          <p class="font-medium">Cost</p>
          <p>Ksh <%= policy.cost %>
          </p>
        </div>

      </div>
      <% } %>
      <%} else { %>
      <p class="text-xs font-medium text-rose-500">Error: Unable to fetch policies</p>
      <% } %>
    </div>

    <div class="flex flex-col  p-4 bg-black/5 rounded-lg gap-4">
      <h4 class="font-medium whitespace-nowrap leading-none tracking-tight">Review your policy details</h4>
      <% if(locals.res.details) { %>
      <!-- Policy details -->
      <div class="flex flex-row max-w-[20rem] overflow-auto overflow-y-hidden gap-4 snap-x snap-proximity">
        <% for (let detail of locals.res.details) { %>
        <div class="bg-white p-4 rounded-lg snap-center min-w-52">
          <p class="text-sm font-semibold pb-2">
            <%= detail.name %>:
          </p>
          <% for (let value of detail.info) { %>
          <p class="text-sm">
            <%= value %>
          </p>
          <%} %>
        </div>
        <%} %>
      </div>
      <% }  else { %>
      <p class="text-xs font-medium text-rose-500">Error: Unable to fetch policies</p>
      <% } %>
    </div>
    <% } else { %>
    <!-- Empty state -->
    <%  if (locals.form) { %>
    <% if(locals.form.partners) { %>
    <div class="min-h-52 flex flex-col gap-4 p-2 justify-center items-center rounded-lg border border-slate-200 shadow-sm h-full">
      <h2 class="text-[1.5rem] max-w-72 font-bold leading-none tracking-tight capitalize text-center">
        Get
        your
        qoutes
        today and get good deals from our
        partners</h2>
      <div class="flex flex-row gap-4 items-center justify-between overflow-y-hidden overflow-auto max-w-72 ">
        <% for (let partner of locals.form.partners) { %>
        <div class="border border-slate-200 shadow-sm rounded-lg min-w-52 p-2 flex flex-col gap-4 items-center justify-center">
          <div class="w-20 h-20 bg-black/80 rounded-xl border-4 border-slate-300 shrink-0"></div>
          <h3 class="text-lg font-semibold text-center leading-none tracking-tight"><%= partner %></h3>
        </div>
        <%} %>
      </div>
    </div>
    <% } else { %>
    <p class="text-sm font-medium text-rose-400">Error: Unable to get insurance partners</p>
    <% }}  else { %>
    <p class="text-xs font-medium text-rose-500">Error: Form not present</p>
    <% } %>
    <%} %>

  </div>
</main>